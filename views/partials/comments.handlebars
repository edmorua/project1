<div class="card" style="margin-bottom: 2em;">
  <div class="card-header">
    <h3 class="card-title">
      Latest Comments
    </h3>
  </div>
  <div class="card-body">
    <ul class="media-list">
      {{#each sidebar.comments}}
      <li class="media">
        <a href="/images/{{image.uniqueId}}" class="pull-left"><img class="media-object" width="45" height="45" src="/public/upload/{{image.filename}}" alt=""></a>
        <div class="media-body">
          {{comment}}<br/>
          <strong class="media-header">{{name}}</strong> <small class="text-muted">{{timeago timestamp}}</small>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>